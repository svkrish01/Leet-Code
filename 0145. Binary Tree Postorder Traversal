//0145. Binary Tree Postorder Traversal

class Solution 
{
    public:
        vector<int> postorderTraversal(TreeNode* Root) {
            if(Root == nullptr)
            {
                return {};
            }
            else
            {
                vector<int> Node_List;
                
                Postorder_List(&Node_List, Root);

                return Node_List;
            }
        }

        void Postorder_List(vector<int>* List, TreeNode* Node)
        {
            if(Node->left != nullptr)
            {
                Postorder_List(List, Node->left);
            }

            if(Node->right != nullptr)
            {
                Postorder_List(List, Node->right);
            }

            List->push_back(Node->val);
        }
};
