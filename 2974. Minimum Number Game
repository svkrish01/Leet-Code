//2974. Minimum Number Game

class Solution 
{
    public:
        vector<int> numberGame(vector<int>& Nums) 
        {
            int Length = Nums.size();

            vector<int> Array;

            sort(Nums.begin(), Nums.end());

            for(int X = 0; X < Length / 2; X++)
            {
                Array.push_back(Nums[2*X + 1]);
                Array.push_back(Nums[2*X]);
            }

            return Array;
        }
};
