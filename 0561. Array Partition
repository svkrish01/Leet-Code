//0561. Array Partition

class Solution 
{
    public:
        int arrayPairSum(vector<int>& Nums) 
        {
            int Sum = 0;
            int Length = Nums.size();

            sort(Nums.begin(), Nums.end());

            for(int X = 0; X < (Length/2); X++)
            {
                Sum += Nums[2*X];
            }

            return Sum;
        }
};
