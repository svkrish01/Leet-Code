//1015. Smallest Integer Divisible by K

class Solution 
{
    public:
        int smallestRepunitDivByK(int K) 
        {
            int Remainder = 0;
            int Counter = K;

            while(Counter)
            {
                Remainder = ((Remainder * 10) + 1) % K;
                Counter--;

                if(Remainder == 0)
                {
                    return (K - Counter);
                }
            }

            return -1;
        }
};
