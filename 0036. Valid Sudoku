//0036. Valid Sudoku

class Solution 
{
    public:
        bool isValidSudoku(vector<vector<char>>& Board) 
        {
            bool Valid = true;

            vector<vector<int>> Columns (9, vector<int>(9, 0));
            vector<vector<int>> Rows (9, vector<int>(9, 0));
            vector<vector<int>> Blocks (9, vector<int>(9, 0));

            
            for(int X = 0; X < 9; X++)
            {
                for(int Y = 0; Y < 9; Y++)
                {
                    if(Board[X][Y] == '.')
                    {
                        continue;
                    }
                    else
                    {
                        int Temp = Board[X][Y] - '1';
                        int Block = (Y / 3) + ((X / 3) * 3);

                        if(Columns[Y][Temp] == 1 || Rows[X][Temp] == 1 || Blocks[Block][Temp] == 1)
                        {
                            Valid = false;
                            break;
                        }
                        else
                        {
                            Columns[Y][Temp] = 1;
                            Rows[X][Temp] = 1;
                            Blocks[Block][Temp] = 1;
                        }
                    }
                }

                if(Valid == false)
                {
                    break;
                }
            }

            return Valid;
        }
};
