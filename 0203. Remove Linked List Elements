//0203. Remove Linked List Elements

class Solution 
{
    public:
        ListNode* removeElements(ListNode* Head, int Value) 
        {
            if(Head == nullptr)
            {
                return Head;
            }
            else
            {
                while(Head->val == Value)
                {
                    Head = Head->next;

                    if(Head == nullptr)
                    {
                        return Head;
                    }
                }

                ListNode* Node = Head;
                ListNode* Node_Next = Head->next;
                
                while(Node_Next != nullptr)
                {
                    if(Node_Next->val == Value)
                    {
                        Node->next = Node_Next->next;
                        Node_Next = Node_Next->next;
                    }
                    else
                    {
                        Node = Node->next;
                        Node_Next = Node_Next->next;
                    }       
                }

                return Head;
            }
        }
};
