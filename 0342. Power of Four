//0342. Power of Four

class Solution 
{
    public:
        bool isPowerOfFour(int N) 
        {
            if(N == 0)
            {
                return false;
            }
            else
            {
                bool Check = true;
                
                if(N < 0)
                {
                    Check = false;
                }

                while(N > 1)
                {
                    if(N % 4 != 0)
                    {
                        Check = false;
                        break;
                    }

                    N /= 4;
                }

                return Check;
            }
        }
};
