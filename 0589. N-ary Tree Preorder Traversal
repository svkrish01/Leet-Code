//0589. N-ary Tree Preorder Traversal

class Solution 
{
    public:
        vector<int> preorder(Node* Root) 
        {
            vector<int> Order;

            Explore(Order, Root);

            return Order;
        }

        void Explore(vector<int> &Order, Node* Node)
        {
            if(Node != nullptr)
            {
                Order.push_back(Node->val);

                for(auto Child : Node->children)
                {
                    Explore(Order, Child);
                }
            }
        }
};
