//0263. Ugly Number

class Solution 
{
    public:
        bool isUgly(int N) 
        {
            if(N <= 0)
            {
                return false;
            }
            else
            {
                while(N%2 == 0)
                {
                    N /= 2;
                }

                while(N%3 == 0)
                {
                    N /= 3;
                }

                while(N%5 == 0)
                {
                    N /= 5;
                }

                if(N == 1)
                {
                    return true;
                }
                else
                {
                    return false;
                }
            }   
        } 
};
