//0119. Pascal's Triangle II

class Solution 
{
    public:
        vector<int> getRow(int Row_Index) 
        {
            if(Row_Index == 0)
            {
                return {1};
            }
            else if(Row_Index == 1)
            {
                return {1, 1};
            }
            else
            {
                vector<int> Row;

                Row = {1, 1};

                for(int X = 2; X <= Row_Index; X++)
                {
                    vector<int> Copy = Row;
                    
                    for(int Y = 1; Y < X; Y++)
                    {
                        Row[Y] = Copy[Y] + Copy[Y-1];
                    }

                    Row.push_back(1);
                }

            return Row;
            }
        }
};
