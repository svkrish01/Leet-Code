//0258. Add Digits

class Solution 
{
    public:
        int addDigits(int Number) 
        {
            int Sum = 0;

            while(Number >= 10)
            {
                while(Number > 0)
                {
                    Sum += Number % 10;
                    Number /= 10;
                }

                Number = Sum;
                Sum = 0;
            }

            return Number;
        }
};
