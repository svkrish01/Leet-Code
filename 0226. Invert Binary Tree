//0226. Invert Binary Tree

class Solution 
{
    public:
        TreeNode* invertTree(TreeNode* Root) 
        {
            Invert_Node(Root);

            return Root;
        }

        void Invert_Node(TreeNode* Node)
        {
            if(Node != nullptr)
            {
                Invert_Node(Node->left);
                Invert_Node(Node->right);

                TreeNode* Node_Temp = Node->left;
                Node->left = Node->right;
                Node->right = Node_Temp;
            }
        }
};
