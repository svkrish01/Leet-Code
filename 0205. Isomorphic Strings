//0205. Isomorphic Strings

class Solution 
{
    public:
        bool isIsomorphic(string Domain, string Range) 
        {
            int Length = Domain.length();
            unordered_map<char, char> Cypher, Key;
            bool Check = true;

            for(int X = 0; X < Length; X++)
            {
                if(Cypher.find(Domain[X]) == Cypher.end() && Key.find(Range[X]) == Key.end())
                {
                    Cypher[Domain[X]] = Range[X];
                    Key[Range[X]] = Domain[X];
                }
                else
                {
                    if(Cypher[Domain[X]] != Range[X] || Key[Range[X]] != Domain[X])
                    {
                        Check = false;
                        break;
                    }
                }
            }

            return Check;
        }
};
